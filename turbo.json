{
  "$schema": "https://turborepo.dev/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        ".cache/tsbuildinfo.json",
        "dist/**"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "check:lint": {},
    "check:types": {
      "outputs": [".cache/tsbuildinfo.json"]
    },
    "check:all": {
      "dependsOn": ["check:lint", "check:types"]
    },
    "clean": {
      "cache": false
    }
  }
}
