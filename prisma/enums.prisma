generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ==============================
// SYSTEM ENUMS
// ==============================

enum SystemRole {
  user
  member
  admin
  owner
  super_admin
}

enum UnitType {
  weight
  volume
  count
}

// ==============================
// AUTH ENUMS
// ==============================

enum UserStatus {
  pending
  active
  inactive
  banned
  deleted
}

// ==============================
// TENANT ENUMS
// ==============================

enum OrganizationStatus {
  pending
  active
  inactive
  banned
  deleted
}

enum InvitationStatus {
  pending
  accepted
  rejected
  canceled
}
