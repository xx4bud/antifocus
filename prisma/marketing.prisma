// ==============================
// BANNERS
// ==============================

model Banner {
  id          String @id @default(uuid())
  title       String
  description String
  imageUrl    String
  link        String

  enabled  Boolean @default(true)
  position Int

  placement String?
  metadata  Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

@@index([enabled, position])
  @@map("banners")
}
